<Window x:Class="GauntletPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:GauntletPrinter"
        Title="GauntletPrinter 1.4" Height="750" Width="850"
        
        WindowState="Maximized">
    <!--Loaded="MainWindow_OnLoaded"-->
    <DockPanel>
        <!--<TextBlock FontSize="20" DockPanel.Dock="Top">1) Fill in one or more decklists</TextBlock>-->
        <Button x:Name="GenerateButton" FontSize="20" Padding="5" Height="50" DockPanel.Dock="Bottom" Click="GenerateButton_Onclick">Generate</Button>
        <TabControl BorderThickness="0,1,0,0">
            <TabItem Header="Decks">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <components:DeckInput Grid.Column="0" DeckNumber="1"/>
                    <components:DeckInput Grid.Column="1" DeckNumber="2"/>
                    <components:DeckInput Grid.Column="2" DeckNumber="3"/>
                    <components:DeckInput Grid.Column="3" DeckNumber="4"/>
                    <components:DeckInput Grid.Column="4" DeckNumber="5"/>
                </Grid>
                <!--<Grid  DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="147*"></ColumnDefinition>
                        <ColumnDefinition Width="21*"/>
                        <ColumnDefinition Width="168*"></ColumnDefinition>
                        <ColumnDefinition Width="167*"></ColumnDefinition>
                        <ColumnDefinition Width="168*"></ColumnDefinition>
                        <ColumnDefinition Width="167*"></ColumnDefinition>
                        --><!--<ColumnDefinition></ColumnDefinition>--><!--
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="315*"></RowDefinition>
                        <RowDefinition Height="60*"/>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="187*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="65,0,43,0">Deck 1</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="65,0,64,0">Deck 2</TextBlock>
                    <TextBlock Grid.Column="3" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="64,0">Deck 3</TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="65,0,64,0">Deck 4</TextBlock>
                    <TextBlock Grid.Column="5" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="64,0">Deck 5</TextBlock>
                    <Button Grid.Column="0" Grid.Row="1" Name="loadFromFile1" Click="LoadFromFile1_OnClick" Grid.ColumnSpan="2">Load from file</Button>
                    <Button Grid.Column="2" Grid.Row="1" Name="loadFromFile2" Click="LoadFromFile2_OnClick">Load from file</Button>
                    <Button Grid.Column="3" Grid.Row="1" Name="loadFromFile3" Click="LoadFromFile3_OnClick">Load from file</Button>
                    <Button Grid.Column="4" Grid.Row="1" Name="loadFromFile4" Click="LoadFromFile4_OnClick">Load from file</Button>
                    <Button Grid.Column="5" Grid.Row="1" Name="loadFromFile5" Click="LoadFromFile5_OnClick">Load from file</Button>
                    <Button Grid.Column="0" Grid.Row="2" Name="getFromWeb1" Click="GetFromWeb1_OnClick" Grid.ColumnSpan="2">Get from web</Button>
                    <Button Grid.Column="2" Grid.Row="2" Name="getFromWeb2" Click="GetFromWeb2_OnClick">Get from web</Button>
                    <Button Grid.Column="3" Grid.Row="2" Name="getFromWeb3" Click="GetFromWeb3_OnClick">Get from web</Button>
                    <Button Grid.Column="4" Grid.Row="2" Name="getFromWeb4" Click="GetFromWeb4_OnClick">Get from web</Button>
                    <Button Grid.Column="5" Grid.Row="2" Name="getFromWeb5" Click="GetFromWeb5_OnClick">Get from web</Button>
                    --><!--<TextBlock Grid.Column="5" Grid.Row="0">Deck 6</TextBlock>--><!--
                    <TextBox Grid.Column="0" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True" Name="deck1" Grid.RowSpan="2" Grid.ColumnSpan="2"></TextBox>
                    <TextBox Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True" Name="deck2" Grid.RowSpan="2"></TextBox>
                    <TextBox Grid.Column="3" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True" Name="deck3" Grid.RowSpan="2"></TextBox>
                    <TextBox Grid.Column="4" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True" Name="deck4" Grid.RowSpan="2"></TextBox>
                    <TextBox Grid.Column="5" Grid.Row="3" TextWrapping="Wrap" AcceptsReturn="True" Name="deck5" Grid.RowSpan="2"></TextBox>
                    <TextBlock Grid.Column="0" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="50,0,29,0">Sideboard 1</TextBlock>
                    <TextBlock Grid.Column="2" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="50,0">Sideboard 2</TextBlock>
                    <TextBlock Grid.Column="3" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="50,0,49,0">Sideboard 3</TextBlock>
                    <TextBlock Grid.Column="4" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="50,0">Sideboard 4</TextBlock>
                    <TextBlock Grid.Column="5" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="50,0,49,0">Sideboard 5</TextBlock>
                    <TextBox Grid.Column="0" Grid.Row="6" TextWrapping="Wrap" AcceptsReturn="True" Name="sideboard1" Grid.ColumnSpan="2"></TextBox>
                    <TextBox Grid.Column="2" Grid.Row="6" TextWrapping="Wrap" AcceptsReturn="True" Name="sideboard2"></TextBox>
                    <TextBox Grid.Column="3" Grid.Row="6" TextWrapping="Wrap" AcceptsReturn="True" Name="sideboard3"></TextBox>
                    <TextBox Grid.Column="4" Grid.Row="6" TextWrapping="Wrap" AcceptsReturn="True" Name="sideboard4"></TextBox>
                    <TextBox Grid.Column="5" Grid.Row="6" TextWrapping="Wrap" AcceptsReturn="True" Name="sideboard5"></TextBox>
                    --><!--<TextBox Grid.Column="5" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" Name="deck6"></TextBox>-->
                    <!--<Button Grid.Column="5" Grid.Row="2" Name="getFromWeb6" Click="GetFromWeb6_OnClick">Get from web</Button>--><!--
                </Grid>-->
            </TabItem>
            <TabItem Header="Options">
                <StackPanel Margin="5">
                    <CheckBox Name="grayscaleSymbols" IsChecked="False" ToolTip="When enabled, replaces all colored symbols with their grayscale variants. This is key especially for phyrexian mana, where colors become very hard to distinguish." Margin="3">Use special grayscale symbols instead of colored ones.</CheckBox>
                    <CheckBox Name="deckNumbers" IsChecked="False" ToolTip="When enabled, small number denoting to which deck the card belongs to will be placed before each chard name." Margin="3">Include deck numbers on cards.</CheckBox>
                    <CheckBox Name="colorCode" IsChecked="True" ToolTip="When enabled, a narrow strip highlighting to which deck the card belongs to will be added to each card." Margin="3">Include deck identification color strip (requires color printing).</CheckBox>
                    <CheckBox Name="cardSpacing" IsChecked="True" ToolTip="When enabled, the proxies will be spaced so that their borders don't meet." Margin="3">Add space between proxies.</CheckBox>
                    <CheckBox Name="omitTypeLineForBasics" IsChecked="False" ToolTip="When enabled, basic lands won't have the type line saying 'Basic Land - X'." Margin="3">Omit type line for basic lands.</CheckBox>
                    <Button Name="UpdateCardData" Width="200" HorizontalAlignment="Left" Margin="10" Click="UpdateCardData_OnClick">Update card data</Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
